{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": false,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"], "~/*": ["src/*"] },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["vite/client", "chrome", "vitest/globals", "@testing-library/jest-dom"],
    "moduleResolution": "bundler"
  },
  "exclude": [
    "node_modules",
    "test",
    "vitest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**"
  ]
}
