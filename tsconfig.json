{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": false,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"], "~/*": ["src/*"] },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["vite/client", "chrome"],
    "moduleResolution": "bundler"
  },
  "exclude": [
    "node_modules"
  ]
}
